void anim_scroll_text(int anim_speed, const char* text)
{
  byte curr_char = 0;
  int text_len = strlen(text)-1;
  
  for (int i_text=0; i_text< text_len + 7; i_text++) // character loop
  {
    
    if (i_text > text_len) curr_char = 0;
    else curr_char = text[i_text] - 32; 
    
    
    // shift buffer character space
    
    shift_screen_left(1);
    delay(anim_speed);
       
    for (byte j_column=0; j_column<5; j_column++) // column loop 
    {
      cli();
      reset_scan();
      
      if (curr_char==0) j_column++;
      
      for (byte k_row=0; k_row<8; k_row++) // row loop
      {
        // shift buffer
        ScreenBuffer[k_row] = ScreenBuffer[k_row] << 1;
        
        // get font bit
        if (bitRead(font[curr_char][j_column], 7-k_row))
        {
          //ScreenBuffer[k_row] = ScreenBuffer[k_row] << 1;
          //bit set
          bitSet(ScreenBuffer[k_row], 0);
        }
        else
        {
          //ScreenBuffer[k_row] = ScreenBuffer[k_row] << 1;
          //bit clear
          bitClear(ScreenBuffer[k_row], 0);
        }
        
      } // row loop
    
      sei();
      delay(anim_speed);
      
    } // column loop 
  
  } // character loop
  
  
}
